# the image to use
VAULT_IMAGE="vault:latest"

# the name of the container
VAULT_CONTAINER="vault"
VAULT_CLIENT_CONTAINER="vault-client"

# the host name configured by VW
VAULT_HOST='vault.{{get-env "NET_DOMAIN"}}'

# the last two blocks of the ipv4 address
VAULT_IP_BLOCK="0.8"

# how long the client script should sleep before attempting to access vault
VAULT_CLIENT_SLEEP=15

VAULT_ADDR="http://127.0.0.1:8200"
VAULT_API_ADDR="http://127.0.0.1:8200"