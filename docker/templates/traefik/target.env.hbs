# the image to use
TRAEFIK_IMAGE="traefik:latest"

# the name of the container
TRAEFIK_CONTAINER="traefik"

# the host name configured by traefik
TRAEFIK_HOST='traefik{{get-env "NET_HOST_SUFFIX" ""}}.{{get-env "NET_DOMAIN"}}'

# the last two blocks of the ipv4 address
TRAEFIK_IP_BLOCK="0.2"

# use a wildcard cert? 1= true
TRAEFIK_WILDCARD_CERT="{{get-env "TRAEFIK_WILDCARD_CERT"}}"

# use acme ?
TRAEFIK_ACME=1

# use traefik provider
TRAEFIK_ACME_PROVIDER="cloudflare"
